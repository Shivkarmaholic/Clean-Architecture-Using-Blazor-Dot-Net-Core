@using BlazorApp.Client.Components.Shared
@inherits LayoutComponentBase

<div class="page">
    <!-- Header (row): logo left, actions right -->
    <header class="app-header">
        <div class="brand">
            <a class="brand-link" href="/">Ask Joker </a>
        </div>

        <div class="header-actions">
            <LanguageSwitcher />
            <ThemeToggle />
            <button class="user-avatar" title="Account" aria-label="Account">👤</button>
        </div>
    </header>

    <!-- Page container (row): fixed navbar (collapsible) + body -->
    <div class="app-container">
        <aside class="@SidebarCssClass">
            <NavMenu />
        </aside>

        <main class="app-main">
            <div class="page-continer px-4">
                @Body
            </div>
        </main>
    </div>
</div>


@code {
    private bool _sidebarCollapsed;
    private string SidebarCssClass => _sidebarCollapsed ? "sidebar collapsed" : "sidebar";
    private void ToggleSidebar() => _sidebarCollapsed = !_sidebarCollapsed;
}
